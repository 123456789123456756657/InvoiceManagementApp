@model List<Invoice>
@using InvoiceManagementApp.Models.Models;

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Invoices</h2>
        <a asp-controller="Invoices" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Invoice
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No invoices available. Click "Create New Invoice" to add one.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Invoice ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total Amount</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.Id</td>
                        <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                        <td>@invoice.TotalAmount.ToString("C")</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
